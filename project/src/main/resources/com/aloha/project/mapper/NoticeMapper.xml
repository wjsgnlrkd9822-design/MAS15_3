<?xml version="1.0" encoding="UTF-8" ?>
  <!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.aloha.project.mapper.NoticeMapper">


    <select id="list" resultType="Notice">
        SELECT *
        FROM notices
        ORDER BY reg_date DESC
    </select>

    <select id="select" resultType="Notice">
        SELECT *
        FROM notices
        WHERE notice_no = #{no}
    </select>

    <insert id="insert">
        INSERT INTO notices (title, content)
        VALUES (#{title}, #{content})
    </insert>

    <update id="update">
        update notices 
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="content != null">content = #{content},</if>
        </set>
        where notice_no = #{no}
    </update>

    <delete id="delete">
        DELETE FROM notices
        WHERE notice_no = #{no}
    </delete>
</mapper>