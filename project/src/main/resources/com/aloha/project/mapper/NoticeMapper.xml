<?xml version="1.0" encoding="UTF-8" ?>
  <!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.aloha.project.mapper.NoticeMapper">
<resultMap id="noticeMap" type="Notice">
    <id property="no" column="notice_no"/>
    <result property="title" column="title"/>
    <result property="content" column="content"/>
    <result property="regDate" column="reg_date"/>
</resultMap>

<select id="list" resultMap="noticeMap">
    SELECT *
    FROM notices
    ORDER BY reg_date DESC
</select>

<!-- ⭐ 메인 페이지용 최근 공지사항 조회 추가 -->
<select id="getRecentNotices" parameterType="int" resultMap="noticeMap">
    SELECT *
    FROM notices
    ORDER BY reg_date DESC
    LIMIT #{limit}
</select>

    <select id="select" resultMap="noticeMap">
        SELECT *
        FROM notices
        WHERE notice_no = #{no}
    </select>

    <insert id="insert">
        INSERT INTO notices (title, content)
        VALUES (#{title}, #{content})
    </insert>

    <update id="update">
        update notices 
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="content != null">content = #{content},</if>
        </set>
        where notice_no = #{no}
    </update>

    <delete id="delete">
        DELETE FROM notices
        WHERE notice_no = #{no}
    </delete>
</mapper>
