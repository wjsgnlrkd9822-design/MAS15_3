<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

  <mapper namespace="com.aloha.project.mapper.UserSocialMapper">

    <!-- resultMap 정의 -->
    <resultMap id="UserSocialMap" type="com.aloha.project.dto.UserSocial">
        <id property="no" column="no"/>
        <result property="userNo" column="user_no"/>
        <result property="provider" column="provider"/>
        <result property="socialId" column="social_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- provider + social_id로 조회 -->
    <select id="selectByProviderAndSocialId" resultMap="UserSocialMap">
        SELECT *
        FROM users_social
        WHERE provider = #{provider}
          AND social_id = #{socialId}
    </select>

    <!-- user_no로 조회 -->
    <select id="selectByUserNo" resultMap="UserSocialMap">
        SELECT *
        FROM users_social
        WHERE user_no = #{userNo}
    </select>

    <!-- insert -->
    <insert id="insert" parameterType="com.aloha.project.dto.UserSocial">
        INSERT INTO users_social (user_no, provider, social_id)
        VALUES (#{userNo}, #{provider}, #{socialId})
    </insert>

    <!-- delete -->
    <delete id="deleteByUserNo">
        DELETE FROM users_social
        WHERE user_no = #{userNo}
    </delete>

  </mapper>